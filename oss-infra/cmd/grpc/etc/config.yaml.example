server:
  name: "oss-service"  # 服务名称(注册到服务发现中心的名称)
  env: "dev"  # 环境,可选值: dev, test, prod
  port: 19093  # 服务端口

database:
  host: "127.0.0.1"
  port: 5432
  database: "test"
  user: "root"
  password: "root"

redis:
  host: "127.0.0.1"
  port: 6379
  user: ""
  password: ""

observability:
  port: 16665  # HTTP 可观测性相关端口
  pprof:
    enable: false
  metrics:
    enable: false
  trace:
    enable: false
    address: "127.0.0.1:4317"  # otel exporter grpc endpoint

registry:
  address: "127.0.0.1:8500"  # Consul 服务发现中心地址

log:
  level: "info"
  file:
    enable: false
    directory: "./logs"
    name: "oss.log"
    max_size: 100
    max_age: 30
    max_backups: 5
    compress: true
    local_time: true
  console:
    enable: true
    format: "console"

# 存储服务配置
storage:
  provider: "local"  # 存储提供商: local, aws, aliyun
  
  # 本地存储配置
  local:
    upload_path: "./uploads"  # 文件上传目录
    base_url: "http://localhost:19093"  # 文件访问的基础URL
  
  # AWS S3 配置
  aws:
    region: "us-east-1"
    access_key_id: "your_access_key"
    secret_access_key: "your_secret_key"
    bucket: "your-bucket-name"
    endpoint: ""  # 留空使用默认AWS端点
  
  # 阿里云OSS配置
  aliyun:
    region: "oss-cn-hangzhou"
    access_key_id: "your_access_key"
    secret_access_key: "your_secret_key"
    bucket: "your-bucket-name"
    endpoint: "oss-cn-hangzhou.aliyuncs.com"